<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zebra.rondaprf">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />


    <application
        android:allowBackup="true"
        android:icon="@drawable/brasao"
        android:label="@string/app_name"
        android:theme="@style/AppTheme.NoActionBar"
        android:debuggable="true">

        <activity
            android:name="com.zebra.rondaprf.ActivityMenu"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.zebra.rondaprf.Abas"
            android:label="Abas de Impressão"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden">
        </activity>

        <activity
            android:name="com.zebra.rondaprf.KmMunicipio"
            android:label="Localização na BR"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden">
        </activity>

        <activity
            android:theme="@style/Theme.AppCompat.Light.Dialog"
            android:name="com.zebra.rondaprf.AddPrinter"
            android:label="Cadastro de Impressoras"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden">
        </activity>

        <activity
            android:theme="@style/Theme.AppCompat.Light.Dialog"
            android:name="com.zebra.rondaprf.AltPrinter"
            android:label="Altera Cadastro de Impressoras"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden">
        </activity>

        <activity
            android:name="com.zebra.rondaprf.ListPrinter"
            android:label="Lista Cadastro de Impressoras"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden">
        </activity>

        <activity
            android:name="com.zebra.rondaprf.CadUsuario"
            android:label="Cadastro de Usuario"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden">
        </activity>

        <activity
            android:name="com.zebra.rondaprf.ListInfracao"
            android:label="Lista Infrações"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden">
        </activity><!-- ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

    </application>

</manifest>
